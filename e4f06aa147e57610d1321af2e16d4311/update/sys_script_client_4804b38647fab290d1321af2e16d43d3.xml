        <name>Validate IP Address Format</name>
        <order/>
        <script><![CDATA[function onSubmit() {
  var ip = g_form.getValue('u_ip_address');
  if (!ip) return true;

  var ipRegex = /^(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/;

  if (!ipRegex.test(ip)) {
    g_form.showFieldMsg('u_ip_address', 'Please enter a valid IP address (e.g. 8.8.8.8)', 'error');
    return false;
  }
  return true;
}]]></script>
